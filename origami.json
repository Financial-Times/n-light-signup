{
    "description": "Next FT - light sign-up",
    "origamiType": "module",
    "origamiCategory": "components",
    "origamiVersion": 1,
    "support": "next.team@ft.com",
    "supportStatus": "experimental",
    "runServer": "true",
    "demosDefaults": {
        "sass": "demos/src/demo.scss",
        "js": "demos/src/demo.js",
        "documentClasses": "",
        "dependencies": "o-fonts@^2.0.0,o-grid@^4.0.0"
    },
    "demos": [
        {
            "name": "promo-image",
            "description": "Light signup form with promo image",
            "template": "demos/src/standard.mustache",
            "path": "/demos/promo-image.html"
        },
        {
            "name": "no-promo",
            "description": "Light signup form without promo image",
            "template": "demos/src/no-promo.mustache",
            "path": "/demos/no-promo.html"
        },
        {
            "name": "topic-dropdown",
            "description": "Light signup form with promo & topic dropdown",
            "template": "demos/src/topic-dropdown.mustache",
            "path": "/demos/topic-dropdown.html"
        },
        {
            "name": "inline",
            "description": "Light signup form which can appear inline with content",
            "template": "demos/src/inline.mustache",
            "path": "/demos/inline.html"
        },
        {
            "name": "coloured-background",
            "description": "Light signup form with a coloured background",
            "template": "demos/src/coloured-background.mustache",
            "path": "/demos/coloured-background.html"
        },
        {
            "name": "non-collapsible",
            "description": "Light signup form which doesnâ€™t collapse",
            "template": "demos/src/non-collapsible.mustache",
            "path": "/demos/non-collapsible.html"
        }
    ],
    "browserFeatures": {
        "required": [
            "fetch"
        ]
    }
}